<UserControl x:Class="Intaller.Wpf.StatusPart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Intaller.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" d:DataContext="{d:DesignInstance local:MainViewModel}">
    <StatusBar>
        <StatusBarItem>
            <TextBlock Text="{Binding Status.Message}" />
        </StatusBarItem>
        <StatusBarItem HorizontalContentAlignment="Stretch">
            <Grid>
                <ProgressBar Minimum="0" 
                             Maximum="100" 
                             Value="{Binding Progress, Mode=OneWay}" x:Name="ProgressBar" />
                <TextBlock Text="{Binding ElementName=ProgressBar, Path=Value, StringFormat={}{P}}" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center" />
            </Grid>
        </StatusBarItem>
    </StatusBar>
</UserControl>
